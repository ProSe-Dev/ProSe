{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron/main.js",
  "homepage": "./",
  "dependencies": {
    "lodash.template": "^4.5.0",
    "mixin-deep": "^2.0.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "set-value": "^2.0.1"
  },
  "scripts": {
    "start": "concurrently \"BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "startwin": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-startwin\"",
    "package": "npm run prepackage && electron-builder build -c.extraMetadata.main=build/electron/main.js --publish never",
    "prepackage": "npm run react-build && npm run electron-build",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "mkdir build/src && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared",
    "electron-start": "ELECTRON_START_URL='http://localhost:3000' electron ./electron/main.js",
    "electron-startwin": "set ELECTRON_START_URL=http://localhost:3000 && electron ./electron/main.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "browserslist": "^4.7.2",
    "concurrently": "^5.0.0",
    "electron": "^7.1.1",
    "electron-builder": "^22.1.0",
    "wait-on": "^3.3.0"
  }
}
